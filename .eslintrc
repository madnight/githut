{
  "extends": [
    "standard",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "standard",
    "mocha",
    "react",
    "promise"
  ],
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "settings": {
    "import/ignore": [
      ".styl$"
    ]
  },
  "rules": {
    "mocha/no-exclusive-tests": "error"
  }
}
